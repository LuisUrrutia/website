{
  "name": "web",
  "version": "0.0.1",
  "type": "module",
  "scripts": {
    "astro": "astro",
    "build": "astro build",
    "build:preview": "rm -rf dist; astro build && astro preview",
    "dev": "astro dev",
    "fmt": "prettier . --check",
    "fmt:fix": "prettier . --write",
    "lint": "oxlint --type-aware",
    "prepare": "husky",
    "preview": "astro preview"
  },
  "lint-staged": {
    "**/*": "prettier --write --ignore-unknown",
    "*.{js,ts,jsx,tsx,astro}": "oxlint --type-aware"
  },
  "overrides": {
    "//lodash": "CVE-2025-13465 - remove when @astrojs/check updates yaml-language-server",
    "//tar": "CVE-2024-28863 - remove when @semantic-release/npm updates npm dependency",
    "lodash": "4.17.23",
    "tar": "7.5.7"
  },
  "dependencies": {
    "@astrojs/check": "^0.9.6",
    "@astrojs/mdx": "^4.3.13",
    "@astrojs/rss": "^4.0.15",
    "@astrojs/sitemap": "^3.7.0",
    "@playform/compress": "^0.2.1",
    "@tailwindcss/vite": "^4.1.18",
    "astro": "^5.17.1",
    "astro-font": "^1.1.0",
    "astro-og-canvas": "^0.10.0",
    "tailwindcss": "^4.1.18",
    "typescript": "^5.9.3"
  },
  "devDependencies": {
    "@commitlint/cli": "^20.3.1",
    "@commitlint/config-conventional": "^20.3.1",
    "@prettier/plugin-oxc": "0.1.3",
    "@semantic-release/exec": "^7.1.0",
    "astro-compressor": "^1.2.0",
    "husky": "^9.1.7",
    "lint-staged": "^16.2.7",
    "oxlint": "^1.42.0",
    "oxlint-tsgolint": "^0.11.4",
    "prettier": "^3.8.1",
    "prettier-plugin-astro": "^0.14.1",
    "prettier-plugin-packagejson": "^3.0.0",
    "prettier-plugin-tailwindcss": "^0.7.2"
  },
  "engines": {
    "bun": ">=1.3"
  }
}
