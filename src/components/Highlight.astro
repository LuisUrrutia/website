---
type HighlightColor = "sky" | "orange";

interface Props {
	color: HighlightColor;
	class?: string;
}

const { color, class: className } = Astro.props;
---

<strong class:list={["highlight", `highlight--${color}`, className]}>
	<slot />
</strong>

<style>
	.highlight {
		position: relative;
		z-index: 0;
		display: inline-block;
		white-space: nowrap;
		font-weight: 600;
		color: var(--color-title);
	}

	.highlight::before {
		content: "";
		position: absolute;
		inset: -0.375rem -0.25rem;
		z-index: -1;
		background-color: var(--highlight-color);
		mask-image: url("/images/brush-1.svg");
		mask-size: 100% 100%;
	}

	.highlight--sky {
		--highlight-color: var(--color-highlight-sky);
		--highlight-rotation: -3deg;
	}

	.highlight--orange {
		--highlight-color: var(--color-highlight-orange);
		--highlight-rotation: 3deg;
	}

	.highlight::before {
		rotate: var(--highlight-rotation);
	}
</style>
