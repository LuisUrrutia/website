---
import IconClock from "@/assets/icons/clock.svg";
import IconEye from "@/assets/icons/eye.svg";

interface Props {
	title: string;
	description: string;
	date: Date;
	views: number;
	href?: string;
}

const { title, description, date, views, href } = Astro.props;

const formattedDate = date.toLocaleDateString("en-US", {
	day: "numeric",
	month: "long",
	year: "numeric",
});
---

<article class="flex flex-col gap-2">
	<h3 class="text-title text-xl font-semibold">
		{
			href ? (
				<a href={href} class="hover:underline">
					{title}
				</a>
			) : (
				title
			)
		}
	</h3>
	<p class="text-subtitle line-clamp-2 text-sm leading-relaxed">
		{description}
	</p>
	<div class="text-subtitle flex gap-4 text-sm">
		<span class="flex items-center gap-1.5">
			<IconClock class="size-4" />
			{formattedDate}
		</span>
		<span class="flex items-center gap-1.5">
			<IconEye class="size-4" />
			{views}
		</span>
	</div>
</article>
