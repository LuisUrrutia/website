---
/**
 * TestimonialCard - A card displaying a testimonial with author info.
 *
 * Displays a testimonial quote along with the author's photo, name, and role.
 *
 * @example
 * ```astro
 * <TestimonialCard
 *   name="John Doe"
 *   role="Software Engineer at Company"
 *   photo="/testimonials/john.jpg"
 *   quote="Great developer to work with!"
 * />
 * ```
 */
import { Image } from "astro:assets";
import Card from "@/components/Card.astro";

interface Props {
	/** The author's name. */
	name: string;
	/** The author's role/position and company. */
	role: string;
	/** The author's photo (imported image). */
	photo: ImageMetadata;
	/** The testimonial quote text. */
	quote: string;
}

const { name, role, photo, quote } = Astro.props;
---

<Card as="figure" class="flex flex-col items-center gap-4 text-center">
	<Image
		src={photo}
		alt={name}
		class="size-24 rounded-full object-cover"
		loading="lazy"
		decoding="async"
		width={96}
		height={96}
	/>

	<blockquote class="text-base italic">"{quote}"</blockquote>

	<figcaption class="flex flex-col gap-1">
		<span class="text-title text-lg font-semibold">{name}</span>
		<span class="text-sm">{role}</span>
	</figcaption>
</Card>
