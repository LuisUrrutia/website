---
import type { ImageMetadata } from "astro";
import { Image } from "astro:assets";

interface Props {
	light: ImageMetadata;
	dark: ImageMetadata;
	alt: string;
	class?: string;
}

const { light, dark, alt, class: className } = Astro.props;
---

<figure class={className}>
	<Image
		src={light}
		alt={alt}
		class="mx-auto block [[data-theme=dark]_&]:hidden"
	/>
	<Image
		src={dark}
		alt=""
		loading="lazy"
		class="mx-auto hidden [[data-theme=dark]_&]:block"
	/>
</figure>
