---
/**
 * TwitterCardMeta - Twitter/X Card meta tags.
 *
 * Renders twitter:* meta tags for rich previews when
 * sharing links on Twitter/X.
 *
 * @see https://developer.x.com/en/docs/twitter-for-websites/cards
 */
import { twitterHandle } from "@/data/seo";

export interface Props {
	/** Page title */
	title: string;
	/** Page description */
	description: string;
	/** Absolute URL to the card image */
	image: string;
	/** Alt text for the image */
	imageAlt: string;
	/** Card type */
	card?: "summary" | "summary_large_image" | "app" | "player";
}

const {
	title,
	description,
	image,
	imageAlt,
	card = "summary_large_image",
} = Astro.props;
---

<meta name="twitter:card" content={card} />
<meta name="twitter:site" content={twitterHandle} />
<meta name="twitter:creator" content={twitterHandle} />
<meta name="twitter:title" content={title} />
<meta name="twitter:description" content={description} />
<meta name="twitter:image" content={image} />
<meta name="twitter:image:alt" content={imageAlt} />
