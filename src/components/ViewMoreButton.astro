---
import IconChevronDown from "@/components/icons/IconChevronDown.astro";

interface Props {
	expandedText?: string;
	collapsedText?: string;
	class?: string;
}

const {
	expandedText = "View Less",
	collapsedText = "View More",
	class: className,
} = Astro.props;
---

<button
	type="button"
	class:list={[
		"view-more-btn flex flex-col items-center gap-1 mx-auto px-4 py-2 border-none bg-transparent text-subtitle text-sm cursor-pointer transition-colors hover:text-title",
		className,
	]}
	data-expanded-text={expandedText}
	data-collapsed-text={collapsedText}
>
	<span class="view-more-btn-text">{collapsedText}</span>
	<IconChevronDown class="view-more-btn-icon size-4 transition-transform" />
</button>

<style>
	.view-more-btn.expanded .view-more-btn-icon {
		transform: rotate(180deg);
	}
</style>
