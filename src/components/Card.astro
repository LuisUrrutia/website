---
import type { HTMLTag, Polymorphic } from "astro/types";

type Props<Tag extends HTMLTag> = Polymorphic<{ as: Tag }> & {
	class?: string;
};

const { as: Element = "section", class: className, ...props } = Astro.props;
---

<Element
	class:list={["bg-card shadow-soft rounded-3xl p-5", className]}
	{...props}
>
	<slot />
</Element>
