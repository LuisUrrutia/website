---
import type { HTMLAttributes } from "astro/types";

interface Props extends HTMLAttributes<"button"> {
	label: string;
	category?: string;
	pressed?: boolean;
}

const {
	label,
	category,
	pressed = false,
	class: className,
	...attrs
} = Astro.props;
---

<button
	type="button"
	class:list={[
		"filter-chip border-subtitle text-subtitle hover:border-title hover:text-title focus-visible:outline-title cursor-pointer rounded-full border bg-transparent px-4 py-1.5 text-sm transition-colors focus-visible:outline-2 focus-visible:outline-offset-2",
		className,
	]}
	data-category={category}
	aria-pressed={pressed ? "true" : "false"}
	{...attrs}
>
	{label}
</button>

<style>
	.filter-chip[aria-pressed="true"] {
		border-color: var(--color-title);
		background: var(--color-title);
		color: var(--color-card);
	}

	.filter-chip[aria-pressed="true"]:hover {
		opacity: 0.9;
	}

	.filter-chip[aria-pressed="true"]:focus-visible {
		outline-color: var(--color-title);
	}

	.filter-chip:active {
		transform: scale(0.97);
	}
</style>
