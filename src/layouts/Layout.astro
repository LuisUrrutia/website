---
import { AstroFont } from "astro-font";
import ThemeScript from "@/components/ThemeScript.astro";
import LocaleScript from "@/components/LocaleScript.astro";
import ViewportIndicator from "@/components/ViewportIndicator.astro";
import { SEO, type SEOProps } from "@/components/seo";

import "../styles/global.css";

export interface Props extends Partial<SEOProps> {
	/** Page title (defaults to meta.title translation) */
	title?: string;
	/** Page description (defaults to meta.description translation) */
	description?: string;
	/** Skip locale redirect script (use on 404 pages to prevent redirect loops) */
	skipLocaleRedirect?: boolean;
}

const { lang, t } = Astro.locals;
const {
	title = t("meta.title"),
	description = t("meta.description"),
	skipLocaleRedirect = false,
	...seoProps
} = Astro.props;
---

<!doctype html>
<html lang={lang} dir="ltr" class="scrollbar-gutter-stable">
	<head>
		<ThemeScript />
		{!skipLocaleRedirect && <LocaleScript currentLocale={lang} />}
		<meta charset="UTF-8" />
		<meta name="viewport" content="width=device-width" />
		<meta name="generator" content={Astro.generator} />

		<!-- SEO Meta Tags -->
		<SEO title={title} description={description} {...seoProps} />

		<!-- Fonts -->
		<AstroFont
			config={[
				{
					name: "Inter Variable",
					src: [
						{
							style: "normal",
							weight: "100 900",
							path: "/fonts/InterVariable.woff2",
						},
					],
					preload: true,
					display: "swap",
					fallback: "sans-serif",
				},
			]}
		/>

		<!-- Favicons -->
		<link rel="icon" type="image/svg+xml" href="/favicons/favicon.svg" />
		<link
			rel="icon"
			type="image/png"
			sizes="32x32"
			href="/favicons/favicon-32x32.png"
		/>
		<link
			rel="icon"
			type="image/png"
			sizes="16x16"
			href="/favicons/favicon-16x16.png"
		/>

		<!-- Apple Touch Icons -->
		<link
			rel="apple-touch-icon"
			sizes="180x180"
			href="/favicons/favicon-180x180.png"
		/>

		<!-- Sitemap -->
		<link rel="sitemap" href="/sitemap-index.xml" />

		<!-- RSS Feed - prioritize current locale -->
		{
			lang === "en" ? (
				<>
					<link
						rel="alternate"
						type="application/rss+xml"
						title={t("rss.title")}
						href="/rss.xml"
					/>
					<link
						rel="alternate"
						type="application/rss+xml"
						title="Luis Urrutia - Notas de IngenierÃ­a (ES)"
						href="/es/rss.xml"
					/>
				</>
			) : (
				<>
					<link
						rel="alternate"
						type="application/rss+xml"
						title={t("rss.title")}
						href="/es/rss.xml"
					/>
					<link
						rel="alternate"
						type="application/rss+xml"
						title="Luis Urrutia - Engineering Notes (EN)"
						href="/rss.xml"
					/>
				</>
			)
		}

		<!-- Preconnect and DNS Prefetch for external domains -->
		<link rel="preconnect" href="https://giscus.app" crossorigin />
		<link rel="dns-prefetch" href="https://giscus.app" />
		<link rel="dns-prefetch" href="https://github.com" />
		<link rel="dns-prefetch" href="https://linkedin.com" />

		<!-- Windows Tiles -->
		<meta name="msapplication-TileColor" content="#FBFBF9" />
		<meta name="msapplication-config" content="/browserconfig.xml" />

		<!-- Theme Color - adapts to light/dark mode -->
		<meta
			name="theme-color"
			media="(prefers-color-scheme: light)"
			content="#F9F8FA"
		/>
		<meta
			name="theme-color"
			media="(prefers-color-scheme: dark)"
			content="#1C1B29"
		/>

		<!--
			Prefetch hidden tech stack icons (items 10+, shown on "View More").
			First 9 items are visible by default and don't need prefetching.
		-->
		<link rel="prefetch" href="/tech/kubernetes.svg" as="image" />
		<link rel="prefetch" href="/tech/postgresql.svg" as="image" />
		<link rel="prefetch" href="/tech/python.svg" as="image" />
		<link rel="prefetch" href="/tech/solidity.svg" as="image" />
		<link rel="prefetch" href="/tech/astro-light.svg" as="image" />
		<link rel="prefetch" href="/tech/astro-dark.svg" as="image" />
		<link rel="prefetch" href="/tech/svelte.svg" as="image" />
		<link rel="prefetch" href="/tech/terraform.svg" as="image" />
		<link rel="prefetch" href="/tech/git.svg" as="image" />
		<link rel="prefetch" href="/tech/redis.svg" as="image" />
		<link rel="prefetch" href="/tech/mongodb.svg" as="image" />
		<link rel="prefetch" href="/tech/dynamodb.svg" as="image" />
		<link rel="prefetch" href="/tech/claude.svg" as="image" />
		<link rel="prefetch" href="/tech/chatgpt.svg" as="image" />
		<link rel="prefetch" href="/tech/figma.svg" as="image" />

		<!-- JSON-LD slot for page-specific structured data -->
		<slot name="head" />
	</head>
	<body
		class="bg-background text-foreground m-0 bg-[url('data:image/svg+xml,%3Csvg%20xmlns%3D%22http%3A%2F%2Fwww.w3.org%2F2000%2Fsvg%22%20width%3D%2296%22%20height%3D%2296%22%3E%3Cpath%20d%3D%22M24%2020a4%204%200%201%201%200%208%204%204%200%200%201%200-8Zm0%2048a4%204%200%201%201%200%208%204%204%200%200%201%200-8Zm48%200a4%204%200%201%201%200%208%204%204%200%200%201%200-8Zm0-48a4%204%200%201%201%200%208%204%204%200%200%201%200-8Z%22%20fill%3D%22rgba(0%2C0%2C0%2C0.05)%22%2F%3E%3C%2Fsvg%3E')] bg-size-[24px_auto] bg-repeat py-6"
	>
		<!-- Skip to main content link for accessibility -->
		<a
			href="#main-content"
			class="bg-accent text-button-foreground fixed top-0 left-1/2 z-50 -translate-x-1/2 -translate-y-full rounded-b-lg px-4 py-2 font-medium transition-transform focus:translate-y-0"
		>
			{t("a11y.skipToContent")}
		</a>
		<slot />
		{import.meta.env.DEV && <ViewportIndicator />}
	</body>
</html>
